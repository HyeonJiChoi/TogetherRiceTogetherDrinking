<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape >
            <!--도형안에 채워질 색을 정의한다.-->
            <solid android:color="@color/colorWhite"/>
            <!-- width = 테두리 선의 굵기, color = 테두리 선의 색을 정의한다.-->
            <stroke android:width="4dp" android:color="@color/colorOrange"/>
            <!--각 모서리의 라운드 처리 - 값이 클수록 라운드의 각이 커진다.-->
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp"/>
        </shape>
    </item>
</selector>