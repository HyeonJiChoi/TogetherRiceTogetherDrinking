<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linerLayoutSeekerSpecificPage1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollViewSeeker"
        android:layout_width="match_parent"
        android:layout_height="720dp"
        android:fillViewport="true"
        android:paddingTop = "12dp">

        <LinearLayout
            android:id="@+id/linerLayoutSeekerSpecificPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id = "@+id/textViewSpecificMeetingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/yypossangmundongb"
                android:paddingLeft = "10dp"
                android:text="모임이름"
                android:layout_marginBottom="5dp"
                android:textSize="12pt"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id = "@+id/textViewSeekerSimpleDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft = "10dp"
                android:fontFamily="@font/yypossangmundongb"
                android:paddingBottom="30dp"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft = "10dp"
                android:fontFamily="@font/yypossangmundongb"
                android:text="- 모임 설명"
                android:textColor="@color/colorBlack"
                android:textSize="10pt"/>

            <TextView
                android:id="@+id/textViewSeekerExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop = "10dp"
                android:paddingLeft = "35dp"
                android:fontFamily="@font/nanumsquareacb"
                android:paddingBottom="15dp"
                android:textSize="8pt"
                android:lineSpacingExtra="1.5pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft = "10dp"
                android:fontFamily="@font/yypossangmundongb"
                android:text="- 모집 조건"
                android:textColor="@color/colorBlack"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/textViewSeekerConditionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop = "10dp"
                android:paddingLeft = "35dp"
                android:fontFamily="@font/nanumsquareacb"
                android:paddingBottom="30dp"
                android:textSize="8pt"
                android:lineSpacingMultiplier="1.5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft = "10dp"
                android:fontFamily="@font/yypossangmundongb"
                android:text="- 모임 멤버"
                android:textColor="@color/colorBlack"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/textViewSeekerMemberNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft = "27dp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/yypossangmundongb"
                android:textSize="9pt" />

            <ListView
                android:id="@+id/ListViewSeekerMembers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/colorShallowYellow"
                android:dividerHeight="5dp">
            </ListView>
        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/buttonSeekerParticipate"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="참가하기"
        android:background="@drawable/button_selector"
        android:textColor="@color/colorWhite"
        android:textSize="15pt"
        android:fontFamily="@font/yypossangmundongb"/>
</RelativeLayout>