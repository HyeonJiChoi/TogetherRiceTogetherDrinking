<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/imageViewSeekerMeetingFragmentImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="top|center"
            android:layout_weight="6"
            android:src="@drawable/viewpager2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewMeetingLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="분당구"
                android:padding = "4dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorDeepOrange"
                android:textSize="15sp"
                android:fontFamily="@font/nanumsquareaceb"/>

            <ImageButton
                android:id="@+id/ImagebuttonMeetingList"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/jjim2"
                android:background="#00000000"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textViewMeetingDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="150dp"
                android:layout_below="@+id/textViewMeetingLocation"
                android:text = "이런 모임이야!"
                android:textColor="@color/colorGrey"
                android:textSize="10sp"
                android:fontFamily="@font/nanumsquareacb" />

            <TextView
                android:id="@+id/textViewMeetingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/textViewMeetingDescription"
                android:text = "뭐하는 모임이게에에엥ㅇ에엥"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:fontFamily="@font/nanumsquareacb" />

            <TextView
                android:id="@+id/textViewMeetingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textViewMeetingTitle"
                android:text = "날짜 적어줘요요용ㅇㅇ오옹"
                android:textColor="@color/colorOrange"
                android:textSize="10sp"
                android:fontFamily="@font/nanumsquareacb" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/MeetingLeaderProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/hambabee"
                android:layout_marginTop="185dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/ImagebuttonCustomerActionbar"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>