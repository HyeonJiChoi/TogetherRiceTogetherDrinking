<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutCustomerActionbar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/colorDeepBeige">

    <ImageButton
        android:id="@+id/imageButtonBackActionBar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="25dp"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:src="@drawable/left_arrow2" />

    <TextView
        android:id="@+id/textViewCustomerActionbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:fontFamily="@font/yypossangmundongb"
        android:gravity="center"
        android:text="전체"/>
</RelativeLayout>