<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewSignUpScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageViewSignupProfile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:background ="@drawable/image_button"/>

        <TextView
            android:id="@+id/textViewSignUpId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewSignupProfile"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="70dp"
            android:text="아이디"
            android:textSize="12pt"
            android:fontFamily="@font/nanumsquareacb" />

        <Button
            android:id="@+id/buttonSignUpIdDuplication"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignTop="@id/textViewSignUpId"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/textViewSignUpId"
            android:text="중복 확인"
            android:fontFamily="@font/nanumsquareacb"
            android:background="@drawable/button_selector" />

        <EditText
            android:id="@+id/editTextSignUpId"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSignUpId"
            android:layout_marginLeft="70dp"
            android:maxLength="10"/>

        <TextView
            android:id="@+id/textViewSignUpPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSignUpId"
            android:layout_marginLeft="70dp"
            android:text="비밀번호"
            android:textSize="12pt"
            android:fontFamily="@font/nanumsquareacb" />

        <EditText
            android:id="@+id/editTextSignUpPassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSignUpPassword"
            android:layout_marginLeft="70dp"
            android:maxLength="15"
            android:password="true" />

        <TextView
            android:id="@+id/textViewSignUpSamePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSignUpPassword"
            android:layout_marginLeft="70dp"
            android:text="비밀번호 확인"
            android:textSize="12pt"
            android:fontFamily="@font/nanumsquareacb" />

        <EditText
            android:id="@+id/editTextSignUpSamePassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSignUpSamePassword"
            android:layout_marginLeft="70dp"
            android:maxLength="15"
            android:password="true" />

        <ImageView
            android:id="@+id/unlocked"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/textViewSignUpSamePassword"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textViewSignUpSamePassword"
            android:src="@drawable/unlocked"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/locked"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/textViewSignUpSamePassword"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textViewSignUpSamePassword"
            android:src="@drawable/locked"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewSignUpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSignUpSamePassword"
            android:layout_marginLeft="70dp"
            android:text="이름"
            android:textSize="12pt"
            android:fontFamily="@font/nanumsquareacb" />

        <EditText
            android:id="@+id/editTextSignUpName"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSignUpName"
            android:layout_marginLeft="70dp"
            android:maxLength="10" />

        <TextView
            android:id="@+id/textViewSignUpBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSignUpName"
            android:layout_marginLeft="70dp"
            android:text="생년월일"
            android:textSize="12pt"
            android:fontFamily="@font/nanumsquareacb" />

        <EditText
            android:id="@+id/editTextSignUpYear"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSignUpBirth"
            android:layout_marginLeft="70dp"
            android:hint="년(4자)"
            android:fontFamily="@font/dxmsubtitlesmkscpceuch" />

        <EditText
            android:id="@+id/editTextSignUpMonth"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/editTextSignUpYear"
            android:layout_marginLeft="165dp"
            android:hint="월"
            android:fontFamily="@font/dxmsubtitlesmkscpceuch"
            android:maxLength="2" />

        <EditText
            android:id="@+id/editTextSignUpDay"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/editTextSignUpMonth"
            android:layout_marginLeft="260dp"
            android:hint="일"
            android:fontFamily="@font/dxmsubtitlesmkscpceuch"
            android:maxLength="2" />

        <TextView
            android:id="@+id/textViewSignUpGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSignUpYear"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="10dp"
            android:text="성별"
            android:fontFamily="@font/nanumsquareacb"
            android:textSize="12pt" />

        <RadioGroup
            android:id="@+id/radioGroupSignUpGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextSignUpYear"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/textViewSignUpGender"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonSignUpMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="남자"
                android:fontFamily="@font/nanumsquareacr" />

            <RadioButton
                android:id="@+id/radioButtonSignUpFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="여자"
                android:fontFamily="@font/nanumsquareacr" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewSignUpNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSignUpGender"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:text="닉네임"
            android:textSize="12pt"
            android:fontFamily="@font/nanumsquareacb" />

        <EditText
            android:id="@+id/editTextSignUpNickname"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSignUpNickname"
            android:layout_marginLeft="70dp"
            android:maxLength="10" />

        <TextView
            android:id="@+id/textViewSignUpCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSignUpNickname"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:text="나의 성격"
            android:textSize="12pt"
            android:fontFamily="@font/nanumsquareacb" />

        <RadioGroup
            android:id="@+id/radioGroupSignUpCharacter1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewSignUpCharacter"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonSignUpChar1_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="외향적인"
                android:fontFamily="@font/nanumsquareacr" />

            <RadioButton
                android:id="@+id/radioButtonSignUpChar1_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="내향적인"
                android:fontFamily="@font/nanumsquareacr" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroupSignUpCharacter2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroupSignUpCharacter1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonSignUpChar2_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="감성적인"
                android:fontFamily="@font/nanumsquareacr" />

            <RadioButton
                android:id="@+id/radioButtonSignUpChar2_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="이성적인"
                android:fontFamily="@font/nanumsquareacr" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroupSignUpCharacter3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroupSignUpCharacter2"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonSignUpChar3_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="평범한"
                android:fontFamily="@font/nanumsquareacr" />

            <RadioButton
                android:id="@+id/radioButtonSignUpChar3_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="개성있는"
                android:fontFamily="@font/nanumsquareacr" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroupSignUpCharacter4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroupSignUpCharacter3"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonSignUpChar4_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="장난스러운"
                android:fontFamily="@font/nanumsquareacr" />

            <RadioButton
                android:id="@+id/radioButtonSignUpChar4_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="진중한"
                android:fontFamily="@font/nanumsquareacr" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroupSignUpCharacter5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroupSignUpCharacter4"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonSignUpChar5_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="성급한"
                android:fontFamily="@font/nanumsquareacr" />

            <RadioButton
                android:id="@+id/radioButtonSignUpChar5_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="여유로운"
                android:fontFamily="@font/nanumsquareacr" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewSignUpEatingAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroupSignUpCharacter5"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="밥먹는 양"
            android:textSize="12pt"
            android:fontFamily="@font/nanumsquareacb" />

        <RadioGroup
            android:id="@+id/radioGroupSignUpEatingAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:layout_below="@+id/textViewSignUpEatingAmount">

            <RadioButton
                android:id="@+id/radioButtonSignUpLittle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="1인분도\n많아요"
                android:fontFamily="@font/nanumsquareacr" />

            <RadioButton
                android:id="@+id/radioButtonSignUpProper"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1인분이\n적당해요"
                android:fontFamily="@font/nanumsquareacr" />

            <RadioButton
                android:id="@+id/radioButtonSignUpMany"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1인분은\n부족해요"
                android:fontFamily="@font/nanumsquareacr" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewSignUpEatingSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroupSignUpEatingAmount"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="밥먹는 속도"
            android:textSize="12pt"
            android:fontFamily="@font/nanumsquareacb" />

        <RadioGroup
            android:id="@+id/radioGroupSignUpEatingSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:layout_below="@+id/textViewSignUpEatingSpeed">

            <RadioButton
                android:id="@+id/radioButtonSignUpSlow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="느려요"
                android:fontFamily="@font/nanumsquareacr" />

            <RadioButton
                android:id="@+id/radioButtonSignUpMiddle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="적당해요"
                android:fontFamily="@font/nanumsquareacr" />

            <RadioButton
                android:id="@+id/radioButtonSignUpFast"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="빨라요"
                android:fontFamily="@font/nanumsquareacr" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonSignUpSignUp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_below="@+id/radioGroupSignUpEatingSpeed"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:text="가입하기"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_selector"
            android:fontFamily="@font/yypossangmundongb"
            android:textSize="12pt" />
    </RelativeLayout>
</ScrollView>